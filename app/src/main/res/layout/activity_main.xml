<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trialbycombat.com.bluemixtest.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnStartBeaconSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="false"
        android:visibility="visible"
        android:id="@+id/frmBeaconPage"
        android:background="#d5d5d5">

        <ListView
            android:id="@+id/beacon_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="txRSSI"
            android:id="@+id/txtRSSI"
            android:gravity="bottom"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RSSI"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TX"
            android:id="@+id/textView4"
            android:layout_below="@+id/txtRSSI"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="44dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="txtTX"
            android:id="@+id/txtTX"
            android:gravity="bottom"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Distance"
            android:id="@+id/textView6"
            android:layout_above="@+id/txtDistance"
            android:layout_alignLeft="@+id/txtDistance"
            android:layout_alignStart="@+id/txtDistance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="txDistance"
            android:id="@+id/txtDistance"
            android:gravity="bottom"
            android:layout_alignTop="@+id/txtRSSI"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txDistancez"
            android:id="@+id/txtID1"
            android:gravity="bottom"
            android:layout_above="@+id/txtID3"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/txtDistance"
            android:layout_alignEnd="@+id/txtDistance"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtBeaconType"
            android:layout_above="@+id/txtID2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIsSeeing"
            android:layout_marginTop="59dp"
            android:layout_alignRight="@+id/txtDistance"
            android:layout_alignEnd="@+id/txtDistance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txDistancez"
            android:id="@+id/txtID2"
            android:gravity="bottom"
            android:layout_above="@+id/txtID1"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/txtDistance"
            android:layout_alignEnd="@+id/txtDistance"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txDistancez"
            android:id="@+id/txtID3"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txtDistance"
            android:layout_alignEnd="@+id/txtDistance"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="txtTX"
            android:id="@+id/txtNumberOfBeacons"
            android:gravity="bottom"
            android:layout_alignTop="@+id/txtTX"
            android:layout_alignRight="@+id/txtDistance"
            android:layout_alignEnd="@+id/txtDistance"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="#Of beacons"
            android:id="@+id/textView7"
            android:layout_above="@+id/txtNumberOfBeacons"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#00ffc4"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:id="@+id/frmBackground"></FrameLayout>

</RelativeLayout>
