<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trialbycombat.com.bluemixtest.SelectedGiftActivityFragment"
    android:id="@+id/lytSelectedGift">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:weightSum="1"
        android:layout_margin="50dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtSelectedGiftRecepientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtSelectedGiftDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:layout_weight="0.15" />

        <ImageView android:id="@+id/imgSelectedGiftRecepient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY" />

        <Button
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="Hediye GÃ¶nder"
            android:id="@+id/btnStartGiftSending"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="#3F51B5"
            android:layout_weight="0.12"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</RelativeLayout>
